# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration - Use either DATABASE_URL or individual settings
# For hosted databases (Neon, Heroku, etc.), use DATABASE_URL
DATABASE_URL=

# Alternative: Individual database settings (for local development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=meta_project_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# JWT Configuration - Use strong random keys in production
JWT_SECRET=
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=

# Email Configuration (for password reset and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM="Meta Software <noreply@metasoftware.com>"

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Database Security
DB_SSL_MODE=prefer
DB_CONNECTION_TIMEOUT=2000
DB_IDLE_TIMEOUT=30000
DB_MAX_CONNECTIONS=20

# Company Settings
COMPANY_NAME=Meta Software
COMPANY_EMAIL=contact@metasoftware.com
COMPANY_LOGO=/uploads/logo.png

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
